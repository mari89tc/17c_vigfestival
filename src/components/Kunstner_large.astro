---
const {href,img, alt, text} = Astro.props;
---
<div>
    <a href={href}>
        <img src={img} alt={alt}>
        <h5>{text}</h5>
    </a>
</div>
<style>
div {
position: relative;
justify-content: center;
align-items: center;
border-radius: 360px;  
width: 272px;
height: 272px;
box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
}
img {
height: 100%;
width: 100%;
object-fit: cover;
border-radius: 360px; 
background: linear-gradient(0deg, rgba(0, 0, 0, 0.20) 0%, rgba(0, 0, 0, 0.20) 100%), lightgray 50% / cover no-repeat;
}
a {
text-decoration: none;
}
h5 {
color: var(--Color-naturel-100, #FFFFF3);
text-align: center;
position: absolute;
top: 25%;
left: 10%;
width: 80%;
line-height: 30px;
}
div:hover {
background: var(--Color-Cards-round-background-hover, #FFD9FD);
}
div:hover h5 {
color: var(--Color-naturel-500, #0A0A0A);
}
div:hover img {
    display:none;
}
div:active{
background: var(--Color-Cards-round-background-active, #FF9CF9);
}
div:active h5 {
color: var(--Color-text-normaltext_black, #0A0A0A);
}
div:active img {
    display:none;
}
</style>