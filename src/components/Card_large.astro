---
import Secondarybutton from "./Secondarybutton.astro";
const {head, text, img, alt} = Astro.props;
---
<section class="card">
<img src={img} alt={alt}>
<div class="text">
<h3>{head}</h3>
<p class="small">{text}</p>
<Secondarybutton />
</div>
</section>


<style>
.card {
display: flex;
width: 1278px;
align-items: center;
align-content: center;
gap: var(--spacing-4, 40px) var(--spacing-2, 20px);
flex-shrink: 0;
flex-wrap: wrap;
}

.text {
display: flex;
padding-left: var(--spacing-4, 40px);
flex-direction: column;
align-items: flex-start;
gap: var(--spacing-6, 60px);
flex: 1 0 0;  
}
.text h3 {
color: var(--Color-text-heading3_black, #0A0A0A);
}
.text p {
color: var(--Color-text-normaltext_black, #0A0A0A);
flex: 1 0 0;
}
img {
width: 600px;
height: 700px;
flex-shrink: 0;
fill: lightgray 50% / cover no-repeat;
}
</style>