---
import Secondarybutton from "./Secondarybutton.astro";
const {head, maintext, href, text, img, alt, target} = Astro.props;
---
<section class="content">
    <div class="text">
        <h3>{head}</h3>
        <p class="small">{maintext}</p>
        <Secondarybutton {href} {target} {text}/>
    </div>
    <img src={img} alt={alt}>
</section>
<style>
.content {
display: flex;
align-items: center;
justify-content: center;
gap: var(--spacing-4) var(--spacing-2, 20px);
flex-wrap: wrap;
margin-left: var(--spacing-margin-small);
margin-right: var(--spacing-margin-small);
}
.text {
display: flex;
padding: 0px var(--spacing-4);
flex-direction: column;
align-items: flex-start;
gap: var(--spacing-margin-medium);
flex: 1 0 0; 
}
.text h3 {
color: var(--Color-text-heading3_black, #0A0A0A);
margin: 0px;
padding: 0px;
}
.text p {
color: var(--Color-text-normaltext_black, #0A0A0A);
flex: 1 0 0;
}
img {
width: 594.5px;
height: 600px;
border-radius: 360px;
object-fit: cover;
background: lightgray 50% / cover no-repeat; 
}
@media (max-width: 700px) {
img{
width: 360px;
height: 360px;
}
.text {
padding: 0px;    
}
}
</style>