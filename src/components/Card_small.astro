---
import Secondarybutton from "./Secondarybutton.astro";
const {head, text, img, alt} = Astro.props;
---
<section class="card">
<div class="content">
<div class="text">
<h3>{head}</h3>
<p class="small">{text}</p>
<Secondarybutton />
</div>
<img src={img} alt={alt}>
</div>
</section>


<style>
.card {
display: inline-flex;
padding: 0px var(--spacing-margin-medium, 40px);
justify-content: center;
align-items: center;
align-content: center;
gap: var(--spacing-margin-medium, 40px) var(--spacing-horisontal-small, 20px);
flex-wrap: wrap;
}
.content {
display: flex;
width: 1209px;
align-items: center;
align-content: center;
gap: var(--spacing-4, 40px) var(--spacing-2, 20px);
flex-wrap: wrap;
}
.text {
display: flex;
padding: 0px var(--spacing-4, 40px);
flex-direction: column;
align-items: flex-start;
gap: var(--spacing-vertical-xsmall, 60px);
flex: 1 0 0;    
}
.text h3 {
color: var(--Color-text-heading3_black, #0A0A0A);
}
.text p {
color: var(--Color-text-normaltext_black, #0A0A0A);
flex: 1 0 0;
}
img {
width: 594.5px;
height: 600px;
flex-shrink: 0;
border-radius: 360px;
background: lightgray 50% / cover no-repeat; 
}
</style>