<div class="popupOverlay" >
    <div class="grid">
        <img class="spinner" src="/logos/vig_festival_logo.svg" alt="vig festival logo">
    </div>
</div>
<style>
.popupOverlay {
  position: fixed;
  background-color: rgba(0, 0, 0, 0.785);
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 9998;
  display: block;
  overflow-y: hidden;
  overflow-x: hidden;
}
.grid {
    display: grid;
    width: 100%;
    height: 100%;
}
.spinner {
  width: 25%;
  height: 25%;
  align-self: center;
  justify-self: center;
  -webkit-animation: scale 15s linear infinite;
  animation: scale 5s linear infinite;
}
.hide {
  display: none;
}
@-webkit-keyframes scale {
  0% {
    -webkit-transform: scale(1);
  }
  50% {
    -webkit-transform: scale(1.5);
  }
  100% {
    -webkit-transform: scale(1);
  }
}

@keyframes scale {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.5);
  }
  100% {
    transform: scale(1);
  }
}
</style>
<script>
    function hideSpinner() {
        var popupOverlay = document.querySelector('.popupOverlay');
        popupOverlay.classList.add('hide');
    }

    var minDisplayTime = 4000; // 3 seconds
    var contentLoaded = false;
    var timerFinished = false;

    // Timer to ensure spinner is displayed for at least minDisplayTime
    setTimeout(function() {
        timerFinished = true;
        if (contentLoaded) {
            hideSpinner();
        }
    }, minDisplayTime);

    // Event listener for when the window has fully loaded
    window.onload = function() {
        contentLoaded = true;
        if (timerFinished) {
            hideSpinner();
        }
    };
</script>