---
const {href,img, alt, text} = Astro.props;
---
 <a href={href}>
        <img src={img} alt={alt}>
        <h5>{text}</h5>
    </a>
<style>
a {
position: relative;
justify-content: center;
align-items: center;
border-radius: 360px;  
width: 272px;
height: 272px;
box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
text-decoration: none;
}
img {
height: 100%;
width: 100%;
border-radius: 360px;  
object-fit: cover;
background: linear-gradient(0deg, rgba(0, 0, 0, 0.20) 0%, rgba(0, 0, 0, 0.20) 100%), lightgray 50% / cover no-repeat;
}
h5 {
color: var(--Color-naturel-100, #FFFFF3);
text-align: center;
position: absolute;
top: 25%;
left: 10%;
width: 80%;
line-height: 30px;
}
a:hover {
background: var(--Color-Cards-round-background-hover, #FFD9FD);
}
a:hover h5 {
color: var(--Color-naturel-500, #0A0A0A);
}
a:hover img {
    display:none;
}
a:active{
background: var(--Color-Cards-round-background-active, #FF9CF9);
}
a:active h5 {
color: var(--Color-text-normaltext_black, #0A0A0A);
}
a:active img {
    display:none;
}
@media (max-width: 700px) {
a {
width: 170px;
height: 170px;
}
h5 {
    text-wrap: wrap;
    top: 15%;
    left: 10%;
}
}
</style>